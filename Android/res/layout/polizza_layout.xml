<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_elemento_lista">

    <TextView
        android:id="@+id/indirizzo_prima_linea_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/indirizzo_seconda_linea_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/indirizzo_prima_linea_text_view"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/data_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/indirizzo_seconda_linea_text_view"
        android:layout_alignParentRight="true"
        android:maxLines="1"/>

</RelativeLayout>